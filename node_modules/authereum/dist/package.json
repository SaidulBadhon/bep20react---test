{
    "name": "authereum",
    "version": "0.0.4-beta.93",
    "description": "Authereum library",
    "main": "dist/index.js",
    "types": "types/index.d.ts",
    "scripts": {
        "test": "jest",
        "dev": "npm run copy:packagejson && tsc --watch",
        "build": "npm run copy:packagejson && npm run build:ts && npm run build:browser",
        "build:ts": "tsc",
        "build:browser": "browserify -t [ babelify ] dist/index.js | uglifyjs > authereum.js",
        "clean": "rm -rf dist",
        "copy:packagejson": "cp package.json src/package.json",
        "lint": "tslint --fix -c tslint.json src/*.ts src/**/*.ts src/**/**.ts",
        "publish-module": "npm publish --tag beta --access public",
        "dist-tag": "npm dist-tag add \"authereum@$(jq -r .version <package.json)\" latest",
        "bump": "lerna-sync-version",
        "release": "npm run clean && npm test && npm run publish-module && npm run dist-tag",
        "bump-release": "npm run bump && npm run release",
        "prepare": "npm run lint && npm run build"
    },
    "directories": {},
    "author": "",
    "license": "MIT",
    "dependencies": {
        "async": "^3.1.0",
        "bnc-notify": "^0.2.1",
        "ethereum-private-key-to-address": "0.0.3",
        "ethers": "^4.0.36",
        "eventemitter3": "^4.0.0",
        "is-buffer": "^2.0.4",
        "moment": "^2.24.0",
        "penpal": "^4.1.1",
        "pify": "^4.0.1",
        "rollup-plugin-commonjs": "^10.1.0",
        "store": "^2.0.12",
        "web3-provider-engine": "^15.0.4",
        "web3-utils": "^1.2.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.7.0",
        "@babel/core": "^7.7.2",
        "@babel/node": "^7.7.0",
        "@babel/plugin-transform-arrow-functions": "^7.2.0",
        "@babel/plugin-transform-runtime": "^7.6.2",
        "@babel/preset-env": "^7.8.3",
        "@babel/runtime": "^7.7.2",
        "@types/jest": "^24.0.15",
        "@types/node": "^12.11.7",
        "@typescript-eslint/eslint-plugin": "^1.9.0",
        "@typescript-eslint/parser": "^1.9.0",
        "babelify": "^10.0.0",
        "browserify": "^16.5.0",
        "jest": "^24.8.0",
        "lerna-sync-version": "0.0.3",
        "standard": "^12.0.1",
        "ts-jest": "^24.0.2",
        "tsc": "^1.20150623.0",
        "tsify": "^4.0.1",
        "tslint": "^5.18.0",
        "tslint-config-standard": "^8.0.1",
        "typescript": "^3.7.2",
        "uglify-es": "^3.3.9",
        "web3": "^1.2.1"
    },
    "standard": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint/eslint-plugin"
        ]
    }
}
